<html>

<head>
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="../public/css/materialize.min.css" media="screen,projection" />
    <link rel="stylesheet" href="../public/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="../public/css/style.css">

    <!--Let browser know website is optimized for mobile-->

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>

<body>

    <nav>

        <div class="nav-wrapper ">
            <a href="#!" class="brand-logo margin-4">KindaShop</a>
            <a href="#" data-activates="mobile-demo" class="button-collapse "><i class="material-icons">menu</i></a>

            <ul class="right hide-on-med-and-down ">
              <li><a  href="collapsible.html"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Shopping Cart</a></li>
                <li><a href="http://ashutoshdwivedi.in">SignUp <i class="fa fa-user-plus" aria-hidden="true"></i></a></li>
                <li><a href="badges.html">SignIn <i class="fa fa-sign-in" aria-hidden="true"></i></a></li>
            </ul>

            <ul class="side-nav teal" id="mobile-demo">

                <li><a href="http://ashutoshdwivedi.in">SignUp <i class="fa  fa-user-plus right" aria-hidden="true"></i></a></li>
                <li><a href="badges.html">SignIn <i class="fa  fa-sign-in right" aria-hidden="true"></i></a></li>
                <li><a href="collapsible.html">Team <i class="fa fa-info-circle right" aria-hidden="true"></i></a></li>
                <li><a href="mobile.html">Contact <i class="fa fa-phone right" aria-hidden="true"></i></a></li>
                <li><a  href="collapsible.html">Shopping Cart <i class="fa fa-shopping-cart right" aria-hidden="true"></i></a></li>
            </ul>
        </div>
    </nav>
    <div class="fixed-action-btn click-to-toggle">
        <a class="btn-floating btn-large red pulse">
            <i class="fa fa-2x fa-upload" aria-hidden="true"></i>
        </a>

    </div>


    <!-- Page Layout here -->
<div class="container">

  <!-- Form with validation -->
                <div class="col s12 m12 l6">
                  <div class="card-panel">
                    <h4 class="header2">Signup </h4>
                    <div id="erros">
                      errors
                    </div>
                    <div class="row">
                      <form action="/user/signup" method="POST" class="col s12">
                        <div class="row">
                          <div class="input-field col s12">
                            <i class="fa fa-user prefix" aria-hidden="true"></i>
                            <input id="name" type="text" class="validate">
                            <label for="first_name">Name</label>
                          </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s12">
                          <i class="fa fa-envelope prefix" aria-hidden="true"></i>
                            <input id="email" type="email" class="validate">
                            <label for="email">Email</label>
                          </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s12">
                            <i class="fa fa-unlock-alt prefix" aria-hidden="true"></i>
                            <input id="password" type="password" class="validate">
                            <label for="password">Password</label>
                          </div>
                        </div>
                        <div class="row">
                          <div class="input-field col s12">
                            <i class="fa fa-phone prefix" aria-hidden="true"></i>
                            <input id="phone" type="tel" class="validate">
                            <label for="password">Mobile</label>
                          </div>
                        </div>


                          <div class="row">
                            <div class="input-field col s12 " style="margin-top:0px;">
                              <button class="btn cyan waves-effect waves-light right" type="submit" name="action">Signup
                                <i class="mdi-content-send right"></i>
                                <i class="fa fa-arrow-right riht" aria-hidden="true"></i>
                              </button>
                            </div>
                          </div>
                          <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                      </form>

                    </div>
                  </div>
                </div>
              </div>
            </div>


      </div>



    <!--Import jQuery before materialize.js-->
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $(".button-collapse").sideNav();
        });
    </script>
    <script type="text/javascript" src="../public/js/materialize.min.js"></script>
</body>

</html>
